<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AppBarLayout/Toolbar -->
    <style name="Widget.App.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="liftOnScroll">false</item>
    </style>
    <style name="Widget.App.CollapsingToolbarLayout" parent="Widget.Design.CollapsingToolbar">
        <item name="expandedTitleMarginStart">@dimen/side</item>
        <item name="expandedTitleMarginEnd">@dimen/side</item>
        <item name="expandedTitleMarginTop">0dp</item>
        <item name="expandedTitleMarginBottom">@dimen/between</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.App.HeadlineMedium</item>
        <item name="expandedTitleGravity">start|bottom</item>
        <item name="collapsedTitleGravity">center</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.App.HeadlineSmall</item>
    </style>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.HeadlineSmall</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="contentInsetStart">96dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">96dp</item>
        <item name="contentInsetEndWithActions">0dp</item>
    </style>
    <style name="Widget.App.Toolbar.ButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/side</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="ThemeOverlay.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/text</item>
    </style>

    <!-- Dialog -->
    <style name="ThemeOverlay.App.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/primary_accent_dark</item>
        <item name="colorSecondary">@color/secondary_accent</item>
        <item name="colorSecondaryVariant">@color/secondary_accent_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="alertDialogStyle">@style/Widget.App.AlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.App.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Widget.App.AlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.AlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.AlertDialog.Button</item>
        <item name="android:backgroundDimAmount">0.85</item>
        <item name="android:windowAnimationStyle">@style/Animation.App.AlertDialog</item>
    </style>
    <style name="ThemeOverlay.App.AlertDialog.Button" parent="Widget.App.Button">
        <item name="colorPrimary">@color/primary_accent</item>
    </style>
    <style name="Widget.App.AlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.AlertDialog</item>
    </style>
    <style name="Widget.App.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
    </style>
    <style name="Widget.App.AlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyMedium</item>
    </style>
    <style name="Widget.App.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.AlertDialog.Button</item>
    </style>
    <style name="Animation.App.AlertDialog" parent="Animation.AppCompat.Dialog"></style>

    <!-- Bottom sheet dialog -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>
    </style>
    <style name="Widget.App.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/background</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheetDialog</item>
    </style>

    <!-- CardView -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="checkedIcon">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="cardForegroundColor">@color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_light</item>
    </style>
    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/text</item>
    </style>

    <!-- TextInput -->
    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/button_tertiary_foreground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputEditText</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeErrorColor">@color/negative</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="endIconTint">@color/button_tertiary_foreground</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="errorTextColor">@color/negative</item>
    </style>
    <style name="ThemeOverlay.App.TextInputEditText"
        parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.BodySmall</item>
        <item name="editTextStyle">@style/Widget.App.TextInputEditText</item>
    </style>
    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <!-- Button -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
        <item name="elevation">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
    </style>
    <style name="Widget.App.Button.Primary">
        <item name="android:textColor">@color/button_primary_foreground</item>
        <item name="backgroundTint">@color/button_primary_background</item>
        <item name="iconTint">@color/button_primary_foreground</item>
    </style>
    <style name="Widget.App.Button.Secondary">
        <item name="android:textColor">@color/button_secondary_foreground</item>
        <item name="backgroundTint">@color/button_secondary_background</item>
        <item name="iconTint">@color/button_secondary_foreground</item>
    </style>
    <style name="Widget.App.Button.Tertiary">
        <item name="android:textColor">@color/button_tertiary_foreground</item>
        <item name="backgroundTint">@color/button_tertiary_background</item>
        <item name="iconTint">@color/button_tertiary_foreground</item>
        <item name="strokeColor">@color/button_tertiary_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="Widget.App.Button.Icon">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/button_tertiary_background</item>
        <item name="iconTint">@color/button_tertiary_foreground</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/button_tertiary_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="Widget.App.Button.Text">
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@color/button_tertiary_background</item>
        <item name="iconTint">@color/button_tertiary_foreground</item>
        <item name="android:textColor">@color/button_tertiary_foreground</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- TextView -->
    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <!-- Text color "@null" to fall back on textAppearance attributes -->
        <item name="android:textColor">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
    </style>
</resources>